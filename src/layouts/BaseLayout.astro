---
import "../styles/global.css";

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>

    <body class="bg-background px-5 font-libertinus text-text text-default">
        <section class="main-content flex flex-col items-center">
            <slot />
        </section>
    </body>
</html>
